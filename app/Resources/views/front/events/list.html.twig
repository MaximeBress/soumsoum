{% extends "base.html.twig" %}
{% block title %}Events{% endblock %}
{% block body %}
    <section id="page-title">
        <div class="global-title wow zoomIn" style="visibility: visible; animation-name: zoomIn;">
            <h1>All Events</h1>
        </div>
    </section>
    <section id="events-banner">
        <div class="section">
            <div class="row" id="list-events">
                {% for event in events %}
                    <div class="col-xs-12 col-lg-6">
                        <div class="slider-info">
                            <div class="row">
                                <div class="col-12">
                                    <div class="events-slider">
                                        <a href="{{path('event_show', {'id':event.id})}}">
                                            <img class="" src="{{asset(event.getThumbnail)}}" alt="{{event.name}}">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="events-info">
                                        <div class="events_date">
                                            {% if event.startAt %}
                                                <p>
                                                    <i class="fa fa-calendar-o" aria-hidden="true"></i>
                                                    <span>{{ event.startAt|localizeddate('none', 'none', null, null, 'd MMMM Y')}} </span>
                                                </p>
                                                <p>
                                                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                                                    <span>{{ event.startAt|date('H:i') }}</span>
                                                </p>
                                            {% endif %}
                                            <p>
                                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                                <span>{{ event.location }}</span>
                                            </p>
                                            <p>
                                                <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                                <span>{{event.name}}</span>
                                            </p>
                                        </div>
                                        <div class="event-tickets">
                                            <a href="javascript:void(0);">Buy Ticket</a>
                                            <a href="{{event.facebookPath}}" target="_blank">EVENT ON FACEBOOK</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section id="on-tour" class="section_3">
        <div class="section_bg_image" style="background-image: url({{asset('bundles/app/images/oscar-keys-58399-unsplash.jpg)')}}"></div>
        <div class="section">

            <div class="title">
                <div class="">
                    <h1>On Tour</h1>
                    <p>Lorem ipsum dolor</p>
                </div>
            </div>

            <div class="col tickets wow fadeInUpBig">
                {% for event in events %}
                    <div class="row ticket">
                        <div class="col">
                            <div class="row">
                                <a class="col-10 ticket-link" href="{{path('event_show', {'id':event.id})}}">
                                    <div class="day">
                                        <div class="day_num">
                                            <span>{{ event.startAt|date('d') }}</span>
                                            <div>
                                                <p>{{ event.startAt|localizeddate('none', 'none', null, null, 'MMMM')|slice(0,3) }}</p>
                                                <p>{{ event.startAt|date('Y') }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="name">
                                        <p><span>{{ event.name }}</span> // <span>{{event.location}}</span></p>
                                    </div>
                                </a>
                                <div class="col-2 buy">
                                    <a href="javascript:void(0);">Buy Ticket</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script></script>
{% endblock %}
